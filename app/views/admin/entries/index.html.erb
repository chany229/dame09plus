<h1>Listing entries</h1>

<table>
  <tr>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.body %></td>
    <td><%= link_to t('show'), [:admin, entry] %></td>
    <td><%= link_to t('edit'), edit_admin_entry_path(entry) %></td>
    <td><%= link_to t('destroy'), [:admin, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

